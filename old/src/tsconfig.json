{
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "../media/js"
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "app.ts",
        "enigmas/0/Square.ts",
        "enigmas/EnigmaManager.ts",
        "enigmas/test/ColdCase.ts",
        "services/three.d.ts",
        "services/three.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
